{
  "name": "ts-basic-configuration",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "ts-node-dev src/index.ts",
    "test": "jest --clearCache && jest --silent --passWithNoTests --noStackTrace --runInBand",
    "test:unit": "npm run test -- --watch",
    "test:unit:staged": "npm test -- --findRelatedTests",
    "test:unit:coverage": "npm run test -- --coverage",
    "test:functional": "npm run test -- -c ./jest.config.functional.js",
    "test:functional:staged": "npm run test -- -c ./jest.config.functional.js --findRelatedTests",
    "test:functional:coverage": "npm run test -- -c ./jest.config.functional.js --coverage",
    "test:mutation": "stryker run",
    "test:ci": "npm run test:unit:coverage && npm run test:functional",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "lint:deadcode": "ts-prune -e",
    "style:check": "prettier --check src/**/*.ts",
    "style:fix": "prettier --write src/**/*.ts --loglevel silent",
    "db:migrate:dev": "prisma migrate dev --name init"
  },
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucsimao/my-basic-typescript-configuration.git"
  },
  "bugs": {
    "url": "https://github.com/lucsimao/my-basic-typescript-configuration/issues"
  },
  "homepage": "https://github.com/lucsimao/my-basic-typescript-configuration#readme",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@stryker-mutator/core": "^5.5.1",
    "@stryker-mutator/jest-runner": "^5.5.1",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^6.0.0",
    "@types/joi": "^17.2.3",
    "@types/got": "^9.6.12",
    "@types/jest": "^27.0.3",
    "@types/nock": "^11.1.0",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.2",
    "nock": "^13.2.1",
    "prettier": "^2.5.1",
    "prisma": "^3.7.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.8",
    "ts-prune": "^0.10.3",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@prisma/client": "^3.7.0",
    "date-fns": "^2.28.0",
    "express": "^4.17.2",
    "express-rate-limit": "^6.0.5",
    "got": "^11.8.2",
    "http-status-codes": "^2.2.0",
    "joi": "^17.5.0",
    "openapi-comment-parser": "^1.0.0",
    "pino": "^7.6.2",
    "swagger-ui-express": "^4.3.0"
  }
}
